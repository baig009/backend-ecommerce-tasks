                        <img src="https://images.unsplash.com/photo-1523275335684-37898b6baf30" class="w-100" alt="Electronics">
                        <div class="p-3">
                            <h6 class="mb-0">Electronics</h6>
                            <small class="text-muted">156 products</small>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-6">
                    <div class="category-card">
                        <img src="https://images.unsplash.com/photo-1441986300917-64674bd600d8" class="w-100" alt="Fashion">
                        <div class="p-3">
                            <h6 class="mb-0">Fashion</h6>
                            <small class="text-muted">238 products</small>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-6">
                    <div class="category-card">
                        <img src="https://images.unsplash.com/photo-1526170375885-4d8ecf77b99f" class="w-100" alt="Home">
                        <div class="p-3">
                            <h6 class="mb-0">Home & Living</h6>
                            <small class="text-muted">184 products</small>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-6">
                    <div class="category-card">
                        <img src="https://images.unsplash.com/photo-1470309864661-68328b2cd0a5" class="w-100" alt="Sports">
                        <div class="p-3">
                            <h6 class="mb-0">Sports</h6>
                            <small class="text-muted">95 products</small>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Products Section -->
        <section class="mb-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="mb-0">All Products</h3>
                <div class="d-flex align-items-center">
                    <label class="me-2">Sort by:</label>
                    <select class="form-select sort-dropdown">
                        <option>Latest</option>
                        <option>Price: Low to High</option>
                        <option>Price: High to Low</option>
                        <option>Most Popular</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <!-- Filters Sidebar -->
                <div class="col-lg-3">
                    <div class="category-filter">
                        <!-- Category Filter -->
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-body">
                                <h5 class="mb-3">Categories</h5>
                                <button class="filter-btn active">
                                    All Categories
                                    <span class="category-badge">856</span>
                                </button>
                                <button class="filter-btn">
                                    Electronics
                                    <span class="category-badge">156</span>
                                </button>
                                <button class="filter-btn">
                                    Fashion
                                    <span class="category-badge">238</span>
                                </button>
                                <button class="filter-btn">
                                    Home & Living
                                    <span class="category-badge">184</span>
                                </button>
                                <button class="filter-btn">
                                    Sports
                                    <span class="category-badge">95</span>
                                </button>
                            </div>
                        </div>

                        <!-- Price Filter -->
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-body">
                                <h5 class="mb-3">Price Range</h5>
                                <div class="price-slider mb-3">
                                    <input type="range" class="form-range" min="0" max="1000" value="500">
                                </div>
                                <div class="row g-2">
                                    <div class="col">
                                        <input type="number" class="form-control" placeholder="Min">
                                    </div>
                                    <div class="col">
                                        <input type="number" class="form-control" placeholder="Max">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Rating Filter -->
                        <div class="card border-0 shadow-sm">
                            <div class="card-body">
                                <h5 class="mb-3">Rating</h5>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="rating" id="rating5">
                                    <label class="form-check-label" for="rating5">
                                        <div class="rating-stars">
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                        </div>
                                    </label>
                                </div>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="rating" id="rating4">
                                    <label class="form-check-label" for="rating4">
                                        <div class="rating-stars">
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="far fa-star"></i>
                                        </div>
                                        & up
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="rating" id="rating3">
                                    <label class="form-check-label" for="rating3">
                                        <div class="rating-stars">
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="far fa-star"></i>
                                            <i class="far fa-star"></i>
                                        </div>
                                        & up
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Product Grid -->
                <div class="col-lg-9">
                    <div class="row g-4">
                        <!-- Product Card 1 -->
                        <div class="col-lg-4 col-md-6">
                            <div class="product-card">
                                <div class="product-image">
                                    <img src="https://images.unsplash.com/photo-1542291026-7eec264c27ff" alt="Product">
                                    <div class="badge-overlay">
                                        <span class="badge bg-danger">-20%</span>
                                    </div>
                                    <button class="wishlist-btn">
                                        <i class="far fa-heart"></i>
                                    </button>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title product-title">Nike Air Max</h5>
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="rating-stars me-2">
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star-half-alt"></i>
                                        </div>
                                        <small>(4.5)</small>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <span class="product-price">$99.99</span>
                                            <span class="price-old ms-2">$129.99</span>
                                        </div>
                                        <button class="btn-cart">
                                            <i class="fas fa-shopping-cart"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Product Card 2 -->
                        <div class="col-lg-4 col-md-6">
                            <div class="product-card">
                                <div class="product-image">
                                    <img src="https://images.unsplash.com/photo-1523275335684-37898b6baf30" alt="Product">
                                    <div class="badge-overlay">
                                        <span class="badge bg-primary">New</span>
                                    </div>
                                    <button class="wishlist-btn">
                                        <i class="far fa-heart"></i>
                                    </button>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title product-title">Smart Watch Pro</h5>
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="rating-stars me-2">
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                        </div>
                                        <small>(5.0)</small>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <span class="product-price">$199.99</span>
                                        </div>
                                        <button class="btn-cart">
                                            <i class="fas fa-shopping-cart"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Product Card 3 -->
                        <div class="col-lg-4 col-md-6">
                            <div class="product-card">
                                <div class="product-image">
                                    <img src="https://images.unsplash.com/photo-1505740420928-5e560c06d30e" alt="Product">
                                    <div class="badge-overlay">
                                        <span class="badge bg-success">Featured</span>
                                    </div>
                                    <button class="wishlist-btn">
                                        <i class="far fa-heart"></i>
                                    </button>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title product-title">Wireless Headphones</h5>
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="rating-stars me-2">
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="far fa-star"></i>
                                        </div>
                                        <small>(4.0)</small>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <span class="product-price">$149.99</span>
                                        </div>
                                        <button class="btn-cart">
                                            <i class="fas fa-shopping-cart"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Add more product cards with the same structure -->
                    </div>

                    <!-- Pagination -->
                    <nav class="mt-5">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">Previous</a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </section>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light py-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-3 col-md-6">
                    <h5 class="mb-4">Modern Store</h5>
                    <p class="mb-4">Your one-stop destination for all things modern and trendy.</p>
                    <div class="social-links">
                        <a href="#" class="text-light me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-twitter"></i></a>
