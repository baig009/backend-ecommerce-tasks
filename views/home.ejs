    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .hero-slider {
            height: 70vh;
            min-height: 400px;
            max-height: 800px;
        }
        .hero-slider img {
            height: 70vh;
            min-height: 400px;
            max-height: 800px;
            object-fit: cover;
        }
        .carousel-caption {
            background: rgba(0, 0, 0, 0.4);
            padding: 20px;
            border-radius: 10px;
            max-width: 80%;
            margin: auto;
        }
        .product-card {
            transition: all 0.3s;
            height: 100%;
        }
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .product-card img {
            height: 250px;
            object-fit: cover;
            transition: transform 0.3s;
        }
        .product-card:hover img {
            transform: scale(1.05);
        }
        .review-card {
            background: #f8f9fa;
            border-radius: 10px;
            height: 100%;
        }
        .category-card {
            position: relative;
            overflow: hidden;
            border-radius: 10px;
            height: 300px;
        }
        .category-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s;
        }
        .category-card:hover img {
            transform: scale(1.1);
        }
        .category-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(transparent, rgba(0,0,0,0.7));
            padding: 20px;
            color: white;
        }
        @media (max-width: 768px) {
            .hero-slider, .hero-slider img {
                height: 50vh;
                min-height: 300px;
            }
            .category-card {
                height: 200px;
            }
            .product-card img {
                height: 200px;
            }
        }
    </style>
</head>
